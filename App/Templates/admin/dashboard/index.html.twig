{% extends 'base_admin.html.twig' %}

{% set _this			= this %}
{% set _controller 		= _this.thisRouteController() %}
{% set _helpBlock 		= help_block %}
{% set _nav_icon_size	= 1.5 %}
{% set _icon_size	    = 3 %}
{% set _icon			= 'ion-speedometer' %}

{% block content_title %}
	{{ _controller|capitalize }}
{% endblock content_title %}

{% block content_header_help %}
	{{ subHeader(
		_searchedQuery,
		_controller|capitalize,
		_total_records,
		null,
		false,
		null,
		null,
		_icon
	)|raw }}
{% endblock content_header_help %}

{% block main %}

	<div class="uk-grid-match uk-grid-small uk-text-center" uk-grid>
		{% include '/admin/dashboard/widgets/template_card.html.twig' %}
		{% include '/admin/dashboard/widgets/system_health_card.html.twig' %}
		{% include '/admin/dashboard/widgets/user_statistic_card.html.twig' %}

		{% include '/admin/dashboard/widgets/website_statistic_card.html.twig' %}
		{% include '/admin/dashboard/widgets/mini_cards.html.twig' %}
	</div>

{% endblock main %}

{% block body_javascript %}
	{{ parent() }}
	<script src="/public/assets/js/charts.js"></script>
{% endblock body_javascript %}